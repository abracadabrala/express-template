{
  "include": ["src/**/*"],
  "exclude": ["src/types","logs","src/utils/*.pem"],
  "compilerOptions": {
    // "declaration": true,
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": false, //source map 需要时配置为true
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "strict": true,
    "esModuleInterop": true,
    // "typeRoots": ["src/types"]
  }
}
